{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rspec all",
      "type": "shell",
      "command": "bin/rspec spec",
      "group": "test",
      "problemMatcher": {
        "owner": "rspec",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "rspec (.+):(\\d+) # (.+)",
          "file": 1,
          "line": 2,
          "message": 3
        }
      }
    },
    {
      "label": "rspec file",
      "type": "shell",
      "command": "bin/rspec --format doc ${relativeFile}",
      "group": "test",
      "problemMatcher": {
        "owner": "rspec",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "rspec (.+):(\\d+) # (.+)",
          "file": 1,
          "line": 2,
          "message": 3
        }
      }
    },
    {
      "label": "rspec here",
      "type": "shell",
      "command": "bin/rspec --format doc ${relativeFile}:${lineNumber}",
      "group": "test",
      "problemMatcher": {
        "owner": "rspec",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "rspec (.+):(\\d+) # (.+)",
          "file": 1,
          "line": 2,
          "message": 3
        }
      }
    }
  ]
}
